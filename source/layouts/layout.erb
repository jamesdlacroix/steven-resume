<head>
  <meta charset="utf-8">
  <title><%= data.site.title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="description" content="<%= current_page.data.description || data.site.description %>">
  <meta name="author" content="James LaCroix, Michael LaCroix">
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no, maximum-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <% if data.site.alexa_id %>
    <meta name="alexaVerifyID" content="<%= data.site.alexa_id %>">
  <% end %>

  <meta property="og:title" content="<%= data.site.title %>">
  <meta property="og:image" content="<%= data.site.host + image_path("facebook-meta-image.png") %>">
  <meta property="og:url" content="<%= data.site.host + current_page.url %>">
  <meta property="og:description" content="<%= current_page.data.description || data.site.description %>">
  <meta property="og:site_name" content="<%= data.site.title %>">

  <link href="/favicon.ico" rel="shortcut icon">
  <link rel="apple-touch-icon" href="/apple-touch-icon-60x60.png">
  <link rel="apple-touch-icon" href="/apple-touch-icon-76x76.png" sizes="76x76">
  <link rel="apple-touch-icon" href="/apple-touch-icon-120x120.png" sizes="120x120">
  <link rel="apple-touch-icon" href="/apple-touch-icon-152x152.png" sizes="152x152">
  <link rel="canonical" href="<%= data.site.host + current_page.url %>">

  <% if content_for? :authorship %>
    <%= yield_content :authorship %>
  <% end %>

  <%# Stylesheets %>
  <%= stylesheet_link_tag "application" %>
  <link rel="stylesheet" type="text/css" href="//cloud.typography.com/806434/769502/css/fonts.css">

  <%# Modernizr %>
  <%= javascript_include_tag  "modernizr" %>

  <%# Google Analytics %>
  <% if data.site.google_analytics_id && data.site.google_analytics_domain %>
    <script type="text/javascript">
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= data.site.google_analytics_id %>', '<%= data.site.google_analytics_domain %>');
      ga('send', 'pageview');
    </script>
  <% end %>
</head>

<body>
  <%= partial "layouts/header" %>
  <%= content_for?(:content) ? yield(:content) : yield %>
  <%= partial "layouts/footer" %>

  <% if data.site.clicky_analytics_id %>
    <script type="text/javascript">
      var clicky_site_ids = clicky_site_ids || [];
      clicky_site_ids.push(<%= data.site.clicky_analytics_id %>);
      (function() {
        var s = document.createElement('script');
        s.type = 'text/javascript';
        s.async = true;
        s.src = '//static.getclicky.com/js';
        ( document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0] ).appendChild( s );
      })();
    </script>
  <% end %>
</body>
</html>
